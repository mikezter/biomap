<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">

      
      <div id="top">
        <%- if show_title? -%>
          <h1><%=h yield(:title) %></h1>
        <%- end -%>      
      </div>
      <div id="leftnav">
        <h3>Systematik</h3>
        <ul>
          <li>Botanik</li>
          <li>Zoologie</li>
        </ul>
        <%= yield :leftnav %>
      </div>
      <div id="rightnav">
        <%= yield :rightnav %>
      </div>
      <div id="content">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
        <%= yield %>
      </div>
      <div id="footer">
        
        <%= yield :footer %>
      </div>
    </div>
  </body>
</html>




